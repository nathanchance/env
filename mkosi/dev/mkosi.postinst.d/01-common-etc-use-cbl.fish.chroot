#!/usr/bin/env fish

# /etc/use-cbl is a flag for config.fish to make decisions around toolchains
# in PATH. It is '1' if the distribution is the default development image for
# the selected architecture.
switch "$DISTRIBUTION:$ARCHITECTURE"
    case arch:x86-64 fedora:arm64 debian:arm
        echo 1 >/etc/use-cbl
    case '*'
        echo 0 >/etc/use-cbl
end
