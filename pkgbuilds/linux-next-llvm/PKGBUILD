_localversion=-llvm
pkgname=linux-next$_localversion
_srctag=next-20230809
pkgver=${_srctag//-/.}
pkgrel=1
pkgdesc='linux-next'
url="https://git.kernel.org/pub/scm/linux/kernel/git/next/linux-next.git/log/?h=$_srctag"
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  libelf
  pahole
  perl
  tar
  xz
)
options=('!strip')
source=(
  "$pkgname::git+https://git.kernel.org/pub/scm/linux/kernel/git/next/linux-next.git?signed#tag=$_srctag"
  config
  20230724_arnd_btrfs_remove_unused_pages_processed_variable.patch
  20230731_ckoenig_leichtzumerken_drm_exec_use_unique_instead_of_local_label.patch
  20230809_aweber_kernel_backlight_lp855x_drop_ret_variable_in_brightness_change_function.patch
  20230809_nathan_asoc_sof_intel_initialize_chip_in_hda_sdw_check_wakeen_irq.patch
  20230809_ndesaulniers_x86_srso_fix_build_breakage_for_ld_ld_lld.patch
  v3_20430803_xingtong_wu_platform_x86_siemens_simatic_ipc_batt_fix_logical_error_for_bx_59a.patch
  v3_20430803_xingtong_wu_platform_x86_siemens_simatic_ipc_fix_logical_error_for_bx_59a.patch
)

validpgpkeys=(
