# Maintainer: Nathan Chancellor <nathan@kernel.org>
pkgname=distrobox
pkgver=1.3.1
pkgrel=2
pkgdesc="Use any Linux distribution inside your terminal"
arch=('any')
url="https://distrobox.privatedns.org/"
license=('GPL3')
depends=('sh')
optdepends=('docker: Container manager'
            'podman: Container manager')
source=("$pkgname-$pkgver.tar.gz::https://github.com/89luca89/$pkgname/archive/refs/tags/$pkgver.tar.gz"
        0001-temporary-ephemeral-distrobox-335-336.patch)
sha256sums=('22b6625ca243f55c08630d37015cdbfbe1939516022bfef502aa6603f42b4d00'
            '5188dfee05b66cd3d3b16370f4cdc7beb8086c7d517745a54af2fc29612d1d0c')

prepare() {
  cd "$pkgname-$pkgver"

  patch -Np1 <../0001-temporary-ephemeral-distrobox-335-336.patch
}

package() {
  cd "$pkgname-$pkgver"

  ./install --prefix "$pkgdir/usr"
}
