    "keybindings":
    [
        // Unbind Ctrl-^ so that force disconnecting a mosh session works
        { "command" : "unbound", "keys" : "ctrl+shift+6" }

        // focus mode
        { "command": "toggleFocusMode", "keys": "shift+f11" }
    ]
}

