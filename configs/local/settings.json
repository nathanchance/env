            "brightCyan": "#9aedfe",
            "brightWhite": "#eff0eb"
        },
        {
            "name": "nord",
            "background": "#2E3440",
            "foreground": "#D8DEE9",
            "cursorColor": "#D8DEE9",
            "selectionBackground": "#434c5e",
            "black": "#3B4252",
